<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/rounded_corners_popup"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/imageviewcode"
        android:layout_width="350dp"
        android:layout_height="350dp"
        android:layout_margin="30dp"
        android:layout_gravity="center"
        android:contentDescription="@string/HolleBolleGijs"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.494"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/qr" />


    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <ImageButton
            android:id="@+id/codevoltooid"
            android:layout_width="wrap_content"
            android:layout_height="78dp"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"
            android:background="@null"
            android:src="@drawable/rodeknop"
            android:contentDescription="@string/HolleBolleGijs"
            android:scaleType="fitCenter"
            android:layout_centerInParent="true"/>

        <TextView
            android:id="@+id/titelknop"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="17sp"
            android:textStyle="bold"
            android:text="@string/codesluiten"
            android:textColor="@android:color/white"
            android:layout_centerInParent="true"/>

    </RelativeLayout>
</LinearLayout>
